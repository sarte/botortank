<launch>

	<node name="midlevel" pkg="bot" type="midlevel.py" />
	<node name="driver" pkg="bot" type="driver.py" />
	<node name="joy_node" pkg="joy" type="joy_node" />
	<node name="teleop_twist_joy" pkg="teleop_twist_joy" type="teleop_node" />
	<node name="teleop2midlevel" pkg="bot" type="teleop2midlevel.py" />
	<node name="encoder" pkg="bot" type="encoder.py" /> 

  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>  
  <param name="serial_baudrate"     type="int"    value="115200"/>
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rplidar_ros)/rviz/rplidar.rviz" />
</launch>